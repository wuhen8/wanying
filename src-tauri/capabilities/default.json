{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "videoplayer:default",
    "opener:default",
    "core:path:default", 
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://**"
        },
        {
          "url": "http://**"
        }
      ]
    },
     "fs:allow-appconfig-meta",

     {
       "identifier": "fs:allow-mkdir",
       "allow": [
         { "path": "$APPCONFIG" }
       ]
     },
 
     "fs:allow-appconfig-read",
     
     "fs:allow-appconfig-write"
  ]
}